<UserControl x:Class="planetsInfo.NEOUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:planetsInfo"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid>
        <TextBox Name="tbDiameter" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" TextWrapping="Wrap" Text="Diameter" VerticalAlignment="Top" Width="180"/>
        <DatePicker Name="dpDate" HorizontalAlignment="Left" Margin="79,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.47,0.632"/>
        <Button x:Name="btnShow" Content="display" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top" Width="172" Height="31"
                Command="{Binding display_command}" CommandParameter="">
        </Button>
        
    </Grid>
</UserControl>
