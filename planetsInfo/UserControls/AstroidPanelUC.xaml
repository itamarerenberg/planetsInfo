<UserControl x:Class="planetsInfo.UserControls.AstroidPanelUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:planetsInfo.UserControls"
             xmlns:planetsInfo="clr-namespace:planetsInfo" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <materialDesign:Card>
        <ListView x:Name="lvAstroids" Width="auto" ItemsSource="{Binding AstroidsNames}" SelectionMode="Single" SelectedItem="{Binding SelectedAstroidName}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem" BasedOn="{StaticResource MaterialDesignChoiceChipListBoxItem}">
                    
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        </materialDesign:Card>
        <planetsInfo:AstroidUC Grid.Column="1" HorizontalAlignment="Left" DataContext="{Binding Path=SelectedAstroid}" Width="auto"/>
        <Button Command="{Binding OpenFilterTab}" Grid.Column="2"  Height="100" Width="100"/>
    </Grid>
</UserControl>
